#include <stdio.h>

int fac(int a)
{
    if(a==0) return 1;
    else return a*fac(a-1);
}

int main() {
    
    int n;
    printf("Enter a  no. :");
    scanf("%d",&n);
    
    if(n<0)
    {
        printf("Invalid no. !!\n");
        return 0;
    }
    
    printf("Factorial of %d is : %d .\n",n,fac(n));
    

    return 0;
}
