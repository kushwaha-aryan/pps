#include <stdio.h>
int main()
{

    int a,b,c;
    printf("Enter 3 sides of a triangle (e.g a b c)  : ");
    scanf("%d %d %d",&a,&b,&c);

    if(a+b>c && b+c>a && c+a>b)
    {
        printf("Valid \n");

    if(a==b && b==c)
    {
        printf("Equilateral Triangle \n");
    }
    else if(a==b || b==c || c==a)
    {
        printf("Isoceles Triangle \n");
    }
    else
    {
        printf("Scalene Triangle \n");
    }
    }
    else
    {
        printf("NOT Valid \n");
    }

    return 0;
}
